{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src"]
}
